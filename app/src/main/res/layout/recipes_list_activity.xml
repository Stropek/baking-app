<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RecipesListActivity">

    <GridView
        android:id="@+id/recipes_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:layout_margin="@dimen/standard_margin"
        android:verticalSpacing="@dimen/standard_margin"
        android:horizontalSpacing="@dimen/standard_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no_recipes_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/large_text_size"
        android:text="@string/no_data"
        android:gravity="center"
        android:textAlignment="center"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>